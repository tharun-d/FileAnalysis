
@{
    ViewBag.Title = "UploadToServer";
    Layout = "~/Views/Shared/_LayoutPageForPPM.cshtml";
}


<script>
        function validation() {

            var UploadedFile = document.getElementById("file").value;
            var fup = document.getElementById('file');
            var fileNam = fup.value;
            var ext = fileNam.substring(fileNam.lastIndexOf('.') + 1);

            document.getElementById("val").style.visibility = "hidden"

            if (UploadedFile == "") {
                document.getElementById("val").innerText = "please upload the file";
                document.getElementById("val").style.visibility = "visible"
                return false;
            }
            else if (ext != "xlsx") {


                document.getElementById("val").innerText = "file should be in excel format only";
                document.getElementById("val").style.visibility = "visible"
                return false;


            }

            else {
                return true;
            }
        }
</script>

<div class="form">

    @using (Html.BeginForm("UploadToServer", "PPM", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return validation()" }))

    {
        <div>




            <h2>Please browse the PPM File to Upload</h2>

            @Html.TextBox("file", "", new { id = "file", type = "file" }) <br />

            <input type="submit" value="Upload" />

            <label id="val" style="visibility:hidden;color:red;float:right"></label>

            @ViewBag.Message

        </div>

    }

</div>

