<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PPM @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("PPM Upload File", "UploadToServer", "PPM")</li>
                    <li>@Html.ActionLink("PPM Getting ALL", "GettingALL", "PPM")</li>
                    <li>@Html.ActionLink("PPM Day Wise Details", "DayWiseDetails", "PPM")</li>
                    <li>@Html.ActionLink("PPM Missing Date Persons", "MissingDatePersons", "PPM")</li>
                    <li>@Html.ActionLink("PPM Clear ALL", "ClearALL", "PPM")</li>
                    <li>@Html.ActionLink("GO To CATW", "UploadToServer", "File")</li>
                </ul>
            </div>
        </div>
    </div>
    <h2 align="center">PPM @ViewBag.Title </h2>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
